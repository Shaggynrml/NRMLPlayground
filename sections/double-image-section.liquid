<style>
    .double-image-container{
        width: 100%;
        display:flex;
        flex-direction:row;
        justify-content: center;
        align-items: center;
        
         
    }
        
    .first-image-container{
        display:grid;
        padding:10px;
        height:200;
        width:200;
        justify-content: center;
        align-items: center;
        
    }
    .image-title-desktop{
        display: grid;
        align-items: end;
        font-family: sans-serif;
        font-size: 2.3rem;
        font-weight: bold;
        color: #0000;
        padding: .75rem;
        background: var(--c,#0009);
        clip-path: inset(0 var(--_i,100%) 0 0);
        -webkit-mask:
            linear-gradient(#000 0 0),
            linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
        -webkit-mask-clip: text, padding-box;
        margin: -1px;
    }

    .first-image-container:hover .image-title-desktop
    @media screen and (max-width:750px){
        .first-image-container{
            display:none;
        }
    }

    .second-image-container{
        display:flex;
        padding:10px;
        justify-content: center;
        align-items: center;
        
    } 
    @media screen and (max-width:750px){
        .second-image-container{
            display:none;
        }
        .double-image-container {
        flex-direction:column;
        }
    }


    .first-image{
        width: 90%;
        height: 90%;
        object-fit:fill;
        justify-self: center;
        border-radius:5rem;
        
    }

    .second-image{
        width: 90%;
        height: 90%;
        object-fit:cover;
        justify-self: center;
        border-radius:5rem;
    }



    .first-image-container-mobile{
        display:none;
    }
    @media screen and (max-width:750px){
        .first-image-container-mobile{
        padding:10px;
        display: flex;
    }
    }
    .first-image-mobile{
        width: 100%;
        height: 100%;
        object-fit:cover;
        
    }

     .second-image-container-mobile{
        display:none;
     }

     @media screen and (max-width: 750px){
        .second-image-container-mobile{
            padding: 10px;
            display:flex;
        }
        }
    .second-image-mobile{
        width: 100%;
        height: 100%;
        object-fit:cover;
    }

    @media screen and (max-width:750px){
    .image-title-desktop{
        display: none;
    }
    }


</style>

<div class= "double-image-container">
   
    <div>
        
        <a class = "first-image-container" href = "{{section.settings.button_link_one}}">
            <img src = "{{section.settings.image-one| img_url: 'master'}}" class = "first-image" alt="">
            <div class= "image-title-desktop"> {{ section.settings.image-1-title | escape }}</div>
        </a>
    </div>

    <div>
        <div class= "image-title-desktop">{{ section.settings.image-2-title | escape }}</div>
        <a class = "first-image-container" href = "{{section.settings.button_link_two}}">
            <img src = "{{section.settings.image-two| img_url: 'master'}}" alt="" class = "second-image">
        </a>
    </div>


    <div>
        
        <a class = "first-image-container-mobile" href = "{{section.settings.button_link_one}}">
            <img src = "{{section.settings.image-one-mobile| img_url: 'master'}}" class = "first-image-mobile" alt=""/>
        </a>
    </div>

    <div >
        
         <a class = "second-image-container-mobile" href = "{{section.settings.button_link_two}}">
            <img src = "{{section.settings.image-two-mobile| img_url: 'master'}}" alt="" class = "second-image-mobile"/>
        </a>
    </div>
</div>

{% schema %}
    {
        "name": "Double Image",
        "tag": "section",
        "class": "section-double-image",
        "settings": [
            {
                "type": "text",
                "id": "image-1-title",
                "default": "Featured collection",
                "label": "Image 1 Title"
            },
            {
                "type": "image_picker",
                "id": "image-one",
                "label": "t:sections.collage.blocks.image.settings.image.label"
            },
            {
                "type": "image_picker",
                "id": "image-one-mobile",
                "label": "Image 1 Mobile"
            },
            {
            "type": "url",
            "id": "button_link_one",
            "label": "Button link"
            },
            {
                "type": "text",
                "id": "image-2-title",
                "default": "Featured collection",
                "label": "Image 2 Title"
            },
            {
                "type": "image_picker",
                "id": "image-two",
                "label": "t:sections.collage.blocks.image.settings.image.label"
                },
            {
                "type": "image_picker",
                "id": "image-two-mobile",
                "label": "Image 2 Mobile"
            },           
            {
            "type": "url",
            "id": "button_link_two",
            "label": "Button link"
            }
        ],
        "presets": [
            {
            "name": "Double Image"
            }
        ]
    }
{% endschema %}