<style>
    .double-image-container{
        width: 100%;
        display:flex;
        flex-direction:horizontal;
        justify-content: center;
        align-items: center;
         
    }
        
    .first-image-container{
        display:flex;
        padding:10px;
        height:200;
        width:200;
        justify-content: center;
        align-items: center;
    }

    @media screen and (max-width:750px){
        .first-image-container{
            display:none;
        }
    }

    .second-image-container{
        display:flex;
        padding:10px;
        justify-content: center;
        align-items: center;
    } 
    @media screen and (max-width:750px){
        .second-image-container{
            display:none;
        }
    }


    .first-image{
        width: 90%;
        height: 90%;
        object-fit:fill;
        justify-self: center;
        
    }

    .second-image{
        width: 90%;
        height: 90%;
        object-fit:cover;
        justify-self: center;
        
    }



    .first-image-container-mobile{
        display:none;
    }
    @media screen and (max-width:750px){
        .first-image-container-mobile{
        padding:10px;
        display: flex;
    }
    }
    .first-image-mobile{
        width: 100%;
        height: 100%;
        object-fit:cover;
        
    }

     .second-image-container-mobile{
        display:none;
     }

     @media screen and (max-width: 750px){
        .second-image-container-mobile{
            padding: 10px;
            display:flex;
        }
        }
    .second-image-mobile{
        width: 100%;
        height: 100%;
        object-fit:cover;
    }
    .image-title-desktop{
        text-align: center;
        font-size: 4rem;
        font-weight: 6px;
    }
    @media screen and (max-width:750px){
    .image-title-desktop{
        display: none;
    }
    }
    .image-title-mobile{
        text-align: center;
    }
    @media screen and (min-width:750px){
    .image-title-mobile{
        display: none;
    }
    }

</style>

<div class= "double-image-container">
   
        <div>
        <div class= "image-title-desktop"> {{ section.settings.image-1-title | escape }}</div>
        <a class = "first-image-container" href = "{{section.settings.button_link_one}}">
            <img src = "{{section.settings.image-one| img_url: 'master'}}" class = "first-image" alt="">
        </a>
        </div>
    
        <div>
        <div class= "image-title-desktop">{{ section.settings.image-2-title | escape }}</div>
         <a class = "first-image-container" href = "{{section.settings.button_link_two}}">
            <img src = "{{section.settings.image-two| img_url: 'master'}}" alt="" class = "second-image">
        </a>
        </div>


    <div>
        <div class= "image-title-mobile">{{ section.settings.image-1-title | escape }}</div>
        <a  class = "first-image-container-mobile" href = "{{section.settings.button_link_one}}">
            <img src = "{{section.settings.image-one-mobile| img_url: 'master'}}" class = "first-image-mobile" alt=""/>
        </a>
    </div>

    <div >
    <div class= "image-title-mobile"> {{ section.settings.image-2-title | escape }}</div>
         <a class = "second-image-container-mobile" href = "{{section.settings.button_link_two}}">
            <img src = "{{section.settings.image-two-mobile| img_url: 'master'}}" alt="" class = "second-image-mobile"/>
        </a>
    </div>
</div>

{% schema %}
    {
        "name": "Double Image",
        "tag": "section",
        "class": "section-double-image",
        "settings": [
            {
                "type": "text",
                "id": "image-1-title",
                "default": "Featured collection",
                "label": "Image 1 Title"
            },
            {
                "type": "image_picker",
                "id": "image-one",
                "label": "t:sections.collage.blocks.image.settings.image.label"
            },
            {
                "type": "image_picker",
                "id": "image-one-mobile",
                "label": "Image 1 Mobile"
            },
            {
            "type": "url",
            "id": "button_link_one",
            "label": "Button link"
            },
            {
                "type": "text",
                "id": "image-2-title",
                "default": "Featured collection",
                "label": "Image 2 Title"
            },
            {
                "type": "image_picker",
                "id": "image-two",
                "label": "t:sections.collage.blocks.image.settings.image.label"
                },
            {
                "type": "image_picker",
                "id": "image-two-mobile",
                "label": "Image 2 Mobile"
            },           
            {
            "type": "url",
            "id": "button_link_two",
            "label": "Button link"
            }
        ],
        "presets": [
            {
            "name": "Double Image"
            }
        ]
    }
{% endschema %}