{%- style -%}
.bfsz-parent-container{
border: 1.5px grey solid;
border-radius: 10px;
margin: 1% 3%;
}
.bfsz-grid{
  display: grid;
  position: relative;
  grid-template-columns: repeat(5, 1fr);
  grid-template-rows:repeat(3, 1fr);
  row-gap:0.5%;
  column-gap:0.5%;
  padding: 1% 3%;
}
.bfsz-img{
 display:block;
 width: 100%;
}
.bfsz-title{
 text-align:center;
 margin-left: auto;
 margin-right: auto;
font-weight:600;
padding: 1rem 30%;
}
@media screen and (max-width: 800px ){
.bfsz-grid{
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows:repeat(5, 1fr);
}
}

{%- endstyle-%}  
