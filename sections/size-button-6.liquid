{%- style -%}
.bfsz6g-parent-container-{
border: 1.5px grey solid;
border-radius: 10px;
margin: 1% 3%;
}
.bfsz6g-grid{
  display: grid;
  position: relative;
  grid-template-columns: repeat(5, 1fr);
  grid-template-rows:repeat(2, 1fr);
  row-gap:0.5%;
  column-gap:0.5%;
  padding: 1% 3%;
}
.bfsz6g-img{
 display:block;
 width: 100%;
}
.bfsz6g-title{
 text-align:center;
 margin-left: auto;
 margin-right: auto;
font-weight:600;
padding: 1rem 30%;
}
@media screen and (max-width: 800px ){
.bfsz10g-grid{
  grid-template-rows:repeat(6, 1fr);
}
}

{%- endstyle-%}  
