{%- style -%}
.countdown-grid{
  display: grid;
  position: relative;
  grid-template-columns: 50% 50%;
}
.countdown-block{
    display:block;
    margin-left: auto;
    margin-right: auto;
    width: 66%
}
.countdown-groups{
    display: grid;
    grid-template-columns: 23% 2% 23% 2% 23% 2% 23%;
    gap:0.5%;
    background-color:white;
}
.countdown-digits{
    display: grid;
    grid-template-columns: 50% 50%;
}
.countdown-digits > div {
  background-color: black;
  border: 1px ridge #545454;
  border-radius:3px;
  padding: 0.1rem;
  text-align: center;
  font-size:4rem;
  color: white;

}
.countdown-labels{
display: grid;
grid-template-columns: 100%;
  border: 1px ridge #545454;
  border-radius:3px;
  padding: 0.1rem;
  text-align: center;
  font-size:2rem;
  color: #545454;

}
.sep{
  text-align: center;
  font-size:4rem;
  font-style: monospace;

}
.demo{
    text-align: center;
}
{%- endstyle-%} 
