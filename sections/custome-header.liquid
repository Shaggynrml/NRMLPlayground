{% style%}
.nav_container{
  display: inline-flex;
  align-items: stretch;
  flex-direction:row;
  padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  justify-content: center;
}

.navbar_container {
  display: flex;
  align-center: spread;
  justify-content:space-between;
  flex-direction:row;
  background: #D9D9D9;
  transition: 0.3s;
  width: 100%;
  margin:0px;
  position: relative;
}
 @media screen and (min-width: 990px) {
   .navbar_container {
    display: flex;
    align-center: spread;
    justify-content:center;
    flex-direction:row;
    background: #D9D9D9;
    transition: 0.3s;
    width: 100%;
    margin:0px;
    position: relative;
   }
 }
.navbar__link {
  display: inline-flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
  text-decoration: none;
  padding: 10px 20px;
  overflow: hidden;
  position: relative;
  transition: 0.2s ease-in-out;
  justify-self:spread;
}
.navbar__link:hover .navbar__icon {
  color: #e022bb;
  transform: translateY(0) scale(0.9);
}
.navbar__link:hover .navbar__icon::before {
  transform: translate(-50%, -50%);
  opacity: 1;
}
.navbar__link:hover .navbar__label {
  transform: translateY(0);
}
.navbar__icon {
  color: #333;
  transform: translateY(15px);
  transition: 0.3s cubic-bezier(0.09, 0.79, 0.57, 0.89);
  position: relative;
}
.navbar__icon::before {
  content: "";
  width: 45px;
  height: 45px;
  background: rgba(224, 34, 187, 0.15);
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: -1;
  border-radius: 50%;
  transform: translate(-50%, 50%);
  opacity: 0;
  transition: 0.3s;
}
.navbar__label {
  display: block;
  margin-top: 10px;
  font-family: "Roboto Mono", sans-serif;
  color: #e022bb;
  position: relative;
  bottom: 0;
  font-size: 0.9375rem;
  transform: translateY(200%);
  transition: 0.3s cubic-bezier(0.09, 0.79, 0.57, 0.89);
  transition-delay: 0.2s;
}
.searchbar__link {
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
  text-decoration: none;
  padding: 10px 20px;
  position: relative;
  z-index: 10;
}
/* Search */

.input-group.search-group {
    height: 50px;
    min-width: 50px;
    padding-top: 15px;
    position: relative;
}

.input-group .form-control:hover, 
.input-group .form-control:focus {
    padding: 10px 20px;
    width: 620%;
    color: #000;
    z-index: 10;
    cursor: auto;
    background-color: #fff;
    border-radius: 100px;
}

.input-group .form-control::-moz-placeholder {
    color: transparent;
}

.input-group .form-control::-webkit-input-placeholder {
    color: transparent;
}

.input-group .form-control:hover::-moz-placeholder,
.input-group .form-control:focus::-moz-placeholder { 
    color: #ddd;
}
.input-group .form-control:hover::-webkit-input-placeholder,
.input-group .form-control:focus::-webkit-input-placeholder { 
    color: #ddd;
}

.input-group .form-control:focus {
  box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset;
  border-color: #e6e6e6;
}

.form-control.search-control {
  border: 1px solid #ddd;
  border-radius: 50%;
  color: transparent;
  font-size: 16px;
  width: 100%;
  height: 100%;
  padding-top: 15px;
  outline: 0 none;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  cursor: pointer;
  -webkit-backface-visibility: hidden;

  transition: width 0.25s;
}
  header-drawer {
    justify-self: start;
    padding:10px;
    display: inline-flex;
    align-items: center;
    flex-direction: column;
    padding: 10px 20px;
    overflow: hidden;
    position: relative;
    align-self:center;
  }
  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }

.searchbar__icon {
  justify: center;
  align: center;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 5;
}
.searchbar__label {
  display: block;
  margin-top: 10px;
  font-family: "Roboto Mono", sans-serif;
  color: #e022bb;
  position: relative;
  bottom: 0;
  font-size: 0.9375rem;
  transform: translateY(200%);
  transition: 0.3s cubic-bezier(0.09, 0.79, 0.57, 0.89);
  transition-delay: 0.2s;
}

{%endstyle%}
