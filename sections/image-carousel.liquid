{%- style -%}
    .img_container {
        position: relative;
        display: flex;
        height: auto;
        width: 100%;
        overflow-x: scroll;
    }
    .img_container::-webkit-scrollbar {
        display: none;
    }

    .hasLink-no {
        pointer-events: none;
        flex: 0 0 100%;
    }
    .haslink {
        flex: 0 0 100%;
    }
    .image {
        height: auto;
        width: 100%;
    }
    .button_container {
        display: flex;
        justify-content: center;
        padding: 3px 0;
    }
    .slide_button {
        height: 1rem;
        width: 6vw;
        margin: 0 2px;
        background-color: #bbb;
        display: inline-block;
        transition: background-color 0.6s ease;

    }
    
    @media only screen and (max-width:739px){
    }

    @media only screen and (min-width:740px){
    }

{%- endstyle -%}

<h1> {{ section.settings.heading }} </h1>
<div class="img_container">
    {% for block in section.block %}
        <a class="{% if block.settings.hasLink == false%} hasLink-no {% else %} haslink {% endif %}" href="{{block.settings.banner_url}}" id="{{ "slide" | append:forloop.index }}">
            <img class="image" src="{{block.settings.slide_image | image_url: width: auto, height: auto}}"/>
        </a>
    {% endfor %}
</div>
<div class="button_container">
    {% for block in section.blocks %}
        <button class="slide_button" id="{{ "button" | append:forloop.index }}"> </button>
    {% endfor %}
</div>


