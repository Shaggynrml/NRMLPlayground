{% schema %}
{
    "name": "Image Carousel",
    "tag": "section",
    "class": "section-image-carousel",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Title",
            "info": "Note: For best results images should all be the same size"
        } 
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "images",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "slide_image",
                    "label": "Slide Image",
                    "info": "Note: For best results images should all be the same size"
                },
                {
                    "type": "checkbox",
                    "id": "hasLink",
                    "default": true,
                    "label": "Banner Link"
                },
                {
                    "type": "url",
                    "id":"banner_url",
                    "label": "Banner Url"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "Image Carousel" 
        }
    ]
}
{% endschema %}