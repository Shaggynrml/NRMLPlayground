<style>
    .menu-panel-container{
        width:100%;
        padding: 10px;
        z-index: 177777;
    }
    @media screen and (max-width: 990px) {
        .menu-panel-container{
        display: none;
        }
    }
    .menu-panel{
        background-color:#D9D9D9;
        border-radius:50px;
        height: 50px;
        display: flex;
        flex-direction: horizontal;
        justify-content: center;
        align-items: center;
        z-index: 100;
    }
    .menu-list{
        display:flex;
        flex-direction: horizontal;
        list-style-type: none; 
        overflow: hidden;
    }
    .menu-list-item{
        padding:10px
    }
    .dropdown{
        display: inline-block;
    }
    .dropdown-content{
        display: none;
        position:absolute;
    }

    .dropdown:hover .dropdown-content {
        display:block;

    }

    .nested-dropdowns {
    display: flex;
    flex-direction: horizontal;
    justify-content: center;
    align-items: center;
    /* Reset list styles */
    list-style-type: none;
    margin: 0;
    padding: 0;
}

.nested-dropdowns li {
    cursor: pointer;
    z-index:5;
    /* Spacing */
    padding: 1rem;

    /* Used to position the sub nested-dropdowns */
    position: relative;
}

/* The sub nested-dropdowns */
.nested-dropdowns ul {


    /* Hidden by default */
    display: none;

    /* Absolute position */
    left: 0;
    position: absolute;
    top: 100%;

    /* Reset styles */
    list-style-type: none;
    margin: 0;
    padding: 0;
}

/* The second level sub nested-dropdowns */
.nested-dropdowns ul ul {
    left: 100%;
    position: absolute;
    top: 0;
}

/* Change background color of list item when being hovered */
.nested-dropdowns li:hover {
    text-decoration:underline;
    border-radius: 50px;
}

/* Show the direct sub nested-dropdowns when hovering the list item */
.nested-dropdowns li:hover > ul {
    display: block;
}
.child-link{
    background-color: #D9D9D9;
    padding: 10px;
    border-radius:50px;
}
.grandchild-link{
    background-color: #D9D9D9;
    padding: 10px;
    border-radius:50px;
}
.menu-buttons{
    color:#000;
    text-decoration:none;
}

</style>

<div class="menu-panel-container">
    <div class= "menu-panel">
        <ul class="nested-dropdowns">
        {% for link in section.settings.menu.links %}
            <li>
                <a class= "menu-buttons " href="{{ link.url }}">{{ link.title }}</a>
                {% if link.links.size > 0 %}
                    <ul>
                        {% for child_link in link.links %}
                            <li>
                                <div class="nested-dropdowns__item">
                                    <a class= "menu-buttons child-link" href="{{ child_link.url }}">{{ child_link.title }}</a>
                                </div>
                                {% if child_link.links.size > 0 %}
                                    <ul>
                                    {% for grandchild_link in child_link.links %}
                                        <li>
                                                <a class= "menu-buttons grandchild-link" href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                        </ul>
                {% endif %}
            </li>
        {% endfor %}
        </ul>

        {% comment %} <ul class="nested-dropdowns">
            <li>A</li>
            <li>
                <div class="nested-dropdowns__item">
                    B
                </div>
                <ul>
                    <li>B.1</li>
                    <li>B.2</li>
                    <li>
                        <div class="nested-dropdowns__item">
                            B.3
                        </div>
                        <ul>
                            <li>B.3.1</li>
                            <li>B.3.2</li>
                            <li>B.3.3</li>
                            <li>B.3.4</li>
                        </ul>
                    </li>
                    <li>B.4</li>
                    <li>B.5</li>
                </ul>
            </li>
            <li>C</li>
            <li>D</li>
        </ul> {% endcomment %}
    </div>
</div>

{% schema %}
{
    "name": "Menu Panel",
    "tag": "section",
    "class": "section-menu-panel",
    "settings": [
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "t:sections.header.settings.menu.label"
        }
    ],
    "presets": [
      {
        "name": "menu-panel",
        "category": "Custom"
      }
    ]
}

{%endschema%}