{%- style -%}
.image{
  display:block;
  margin-left: auto;
  margin-right: auto;
  width: 60%;
}
.page-title{
  text-align: center;
  font-size: 50px; 
}

.collapsible {
  background-color: #eee;
  color: #444;
  cursor: pointer;
  padding:2rem;
  width: 70%;
  border: none;
  outline: none;
  font-size: 20px;
  margin: 0 auto;
  display: grid;
  place-items: center;
  text-align: left;
}

.active, .collapsible:hover {
  background-color: #ccc;
}

.content {
  margin-top: 1rem;
  padding: 0 18px;
  background-color: white;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.2s ease-out;
  margin-bottom: 1rem; 
}

.gContent{
  margin-top: 1rem;
  padding: 0 18px;
  background-color: white;
  overflow: hidden;
}
@media screen and (min-width: 750px) {
    .content{
      padding-left: 15%;
      padding-right: 15%;
    }
    .gContent{
      padding-top: 5rem;
      padding-left: 15%;
      padding-right: 15%;
    }
    .collapsible{
      padding-left: 15%;
      padding-right: 15%;
    }
  }

{%- endstyle -%}

<h1 class="page-title">{{section.settings.headingName}}</h1>
<div class="gContent">{{section.settings.genericContent}}</div>

{% for blocks in section.blocks %}
<button type="button" class="collapsible">{{blocks.settings.heading}}</button>
<div class="content">
  {{ blocks.settings.row_content }}
{% if blocks.settings.imageSelect != null%}
  <img class="image" src="{{blocks.settings.imageSelect| image_url: width: auto, height: auto}}"/>
{% endif %}
</div>

{% endfor %}

{% javascript %}

var coll = document.getElementsByClassName("collapsible");
var i;

for (i = 0; i < coll.length; i++) {
  coll[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var content = this.nextElementSibling;
    if (content.style.maxHeight){
      content.style.maxHeight = null;
    } else {
      content.style.maxHeight = content.scrollHeight + "px";
    }
  });
}
{% endjavascript %}

  {% schema %}
  {
  "name": "Collapsible Page Break",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "headingName",
      "label": "Name of the Heading",
      "default":"Heading Name"
    },
      {
        "type": "richtext",
        "id": "genericContent",
        "label": "Insert Text",
      }
  ], 
 "blocks": [
    {
      "type": "text",
      "name": "Collapsible Break",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Name",
          "default": "Section Title"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Contents"
        },
        {
          "type": "image_picker",
          "id": "imageSelect",
          "label": "Add an Image"
        },
      ]
    }
  ],
  "presets": [
      {
      "name": "Collapsible Page Break" 
      }
  ]
}
  {%- endschema -%}