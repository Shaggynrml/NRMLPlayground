<style>
.collection-list-container{
  align-items:center;
  justify-content:center;
  display:flex;
}
.collection-list-carousel-wrapper{
    white-space:nowrap;
    overflow:scroll;
    display:flex;
    margin-left:1vw;
}

.collection-list-carousel-wrapper::-webkit-scrollbar {
  display: none;
}
.collection-list-carousel-item{
  margin:6px;
  width:33%;
  object-fit:cover;
  min-width:400px;
}
</style>
  <div class="collection-list-container">
  <div class ="collection-list-carousel-wrapper">
    {%- for block in section.blocks -%} 
      <div class ="collection-list-carousel-item">
        {% render 'card-collection', card_collection: block.settings.collection %}
      </div>
    {%- endfor -%}
  </div>
  </div>

{% schema %}
{
  "name": "t:sections.collection-list.name",
  "tag": "section",
  "class": "section section-collection-list",
  "max_blocks": 15,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.collection-list.presets.name",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}

