{%- style -%}
.big-grid{
    padding: 50px;
    border-style:solid;
}
.button-grid{
  display: grid;
  grid-template-columns: 25% 25% 25% 25%;
  grid-template-rows: 8rem 8rem 8rem 8rem;
  gap:2rem;
  
}

.button-grid> div {
    margin: auto;
    width: 80%;
    height:100%;
    padding:10px
}
.button-grid> a {
    margin: auto;
    display: grid;
    width: 80%;
    height:100%;
}
.centeredButtons{

}
.centeredButtons> button{
    width: 100%;
    height:100%;
    font-size: 2.5rem;
    font-family: monospace;
    transition: all 0.5s;
}
.sizeButtons{
    transition: all 0.5s;
}
.sizeButtons:before{
    background-color:white;
    color: block;
}
.sizeButtons:hover{
    background-color:black;
    color: white;
    content:">"
}
.shopAllGrid{
    grid-column-start:2;
    grid-column-end:4;
    
}
.shopAllGrid> a{
    width: 100%;
    height:100%;
    font-size: 2.5rem;
    font-family:monospace;
    padding: 14px 25px;
    text-align: center;
    display: grid;
    transition: all 0.3s;
}
.shopAllGrid> button{
    width: 100%;
    height:100%;
    font-size: 5rem;
    padding: 14px 25px;
    font-family:monospace;
    transition: all 0.3s;
}
.shopAllButton{
    background-color:white;
    cursor: pointer;
    display: inline-block;
    position: relative;
    transition: 0.3s;
}
.shopAllButton:after {
    content: 'Â»';
    position: absolute;
    opacity: 0;
    right:2px;  
    transition: 0.8s;
    color:white;
}
.shopAllButton:hover{
    padding-right: 6rem;
    padding-left:2rem;
    background-color:black;
    color:white;
    text-decoration:underline;
}
.shopAllButton:hover:after {
    opacity: 1;
    right: 38%;
    color:white;
}

{%- endstyle-%}
