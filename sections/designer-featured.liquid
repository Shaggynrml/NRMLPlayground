<style>

    /* container */
    .featured-designers{
        justify-content: center;
        display: flex;
    }

    .brand-wrapper{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 50px 10px;
        width: 90%;
    }

    .brand-card{

    }

    /* picture */
    .designer{
        height: auto;
        width: 100%;
    }

</style>
<div class="featured-designers">
    <div class="brand-wrapper">
        {%-for block in section.blocks -%}
            <div class="brand-card">
                <a href="{{ block.settings.brand_link }}"> <img class="designer" src= "{{ block.settings.designer_img | img_url: '1200x' }} "/> </a>
            </div>
        {%- endfor -%}
    </div>
</div>
{% schema %}
    {
        "name": "Featured Designers",
        "tag": "section",
        "class": "section-Designer-featured",
        "settings": [
            {
                "type": "image_picker",
                "id": "image_one",
                "label": "designer_1" 
            }
        ],
        "blocks": [
            {
              "type": "featured_designer",
              "name": "Featured-designer",
              "settings": [
                {
                  "type": "image_picker",
                  "id": "designer_img",
                  "label": "Designer Image"
                },
                {
                    "type": "url",
                    "id": "brand_link",
                    "label": "Brand Page"
                }
              ]
            }
          ],
        "presets": [
            {
            "name": "Featured Designers" 
            }
        ]
    }
{% endschema %}