{%- style -%}
.parent-grwrap{
    display:grid;
    position: relative;
    grid-template-columns: 5% 95%;
    grid-template-rows:80% 20% ;
}
.extNav-grid{
	grid-row-start:2;
    grid-column-start: 2;
    padding-top: 2rem;
}
.extNav-button{
	display:block;
    width:{{section.settings.bottomButtonWidth}}%;
    height:5rem;
    margin-left: auto;
    margin-right:auto;
}
.gr-wrap{
    display: block;
    margin-left:auto;
    margin-right: auto;
    padding-bottom:2rem;
    width: 90%;
}
.sizeFeature-2grid{
    display: grid;
    grid-template-columns: 49% 49%;
    gap: 1%;
}
.sizeFeature-3grid{
    display: grid;
    grid-template-columns: 32% 32% 32%;
    gap: 1%;
}
.sizeFeature-4grid{
    display: grid;
    grid-template-columns: 24% 24% 24% 24%;
    gap: 1%;
}
.sizeFeature-5grid{
    display: grid;
    grid-template-columns: 19% 19% 19% 19% 19% 19%;
    gap: 1%;
}
.sizeFeature-6grid{
    display: grid;
    grid-template-columns: 15% 15% 15% 15% 15% 15%;
    gap: 1%;
}
.button-blockWrap{
 display: block;
 margin-left: auto;
 margin-right: auto;
 width:98%;
 height:23rem;
 font-size: {{section.settings.desktopFontSize}}rem;
 background: black;
}
.button-Container{
  position: relative;
  width: 100%;
  max-width: 400px;
  background: black;
}
.button-Container img{
  width: 100%;
  height: auto;
}
.button-Container .btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  color: black;
  background-color:none;
  font-size: {{section.settings.desktopFontSize}}rem;
  padding: 3rem 3.5rem;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  text-align: center;
}
@media (max-width: 980px) {
.button-Container .btn {
    font-size: {{section.settings.mobileFontSize}}rem;
}
.button-blockWrap{
 font-size: {{section.settings.mobileFontSize}}rem;

}
.sizeFeature-6grid{
    grid-template-columns: 32% 32% 32%;
    gap: 1%;
}
.sizeFeature-5grid{
    grid-template-columns: 49% 49%;
    gap: 1%;
}
.sizeFeature-4grid{
    grid-template-columns: 49% 49%;
    gap: 1%;
}
.button-blockWrap{
 height:14rem;
}
}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
{%- endstyle-%}
