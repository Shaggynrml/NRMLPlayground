{%- style -%}
.parent-grwrap{
    display:grid;
    position: relative;
    grid-template-columns: 5% 95%;
    grid-template-rows:100% ;
}
.sizeNav-grid{

}
.gr-block{
    display: block;
    margin-left:auto;
    margin-right: auto;
    width: 50%;
}
.sizeFeature-2grid{
    display: grid;
    grid-template-columns: 49% 49%;
    gap: 1%;
}
.sizeFeature-3grid{
    display: grid;
    grid-template-columns: 32% 32% 32%;
    gap: 1%;
}
.sizeFeature-4grid{
    display: grid;
    grid-template-columns: 24% 24% 24% 24%;
    gap: 1%;
}
.sizeFeature-5grid{
    display: grid;
    grid-template-columns: 19% 19% 19% 19% 19% 19%;
    gap: 1%;
}
.sizeFeature-6grid{
    display: grid;
    grid-template-columns: 15% 15% 15% 15% 15% 15%;
    gap: 1%;
}
.button-blockWrap{
 display: block;
 margin-left: auto;
 margin-right: auto;
 width:80%;
 height:12rem;
 font-size:4rem;
 background: teal;
}
.button-Container{
  position: relative;
  width: 100%;
  max-width: 400px;
  background: black;
}
.button-Container img{
  width: 100%;
  height: auto;
}
.button-Container .btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  color: black;
  background-color:none;
  font-size: {{section.settings.desktopFontSize}}rem;
  padding: 3rem 3.5rem;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  text-align: center;
}
@media (max-width: 980px) {
    .button-Container .btn {
    font-size: {{section.settings.mobileFontSize}}rem;
}

}
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            
{%- endstyle-%}
{%- if section.settings.titleText != blank -%}
   <div class="section-title"> {{ section.settings.titleText }} </div>
{%- endif -%}
<div class="parent-grwrap">
    <div></div>
    <div class="gr-wrap">
    {% for blocks in section.blocks %}
        <div class="sizeFeature-{{blocks.settings.colNumber}}grid">
            <a href="{{ blocks.settings.buttonURL1 }}">
                <div class="button-Container">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn" style= "color:{{blocks.settings.textColor}}"> S {{section.settings.buttonName1}}</button> 
                </div>
            </a>
            <a href="{{ blocks.settings.buttonURL2 }}">
                <div class="button-Container">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn"  style= "color:{{blocks.settings.textColor}};"> M {{section.settings.buttonName2}}</button>
                </div>
            </a>
        {%- if blocks.settings.colNumber> 2 -%}
            <a href="{{ section.settings.buttonURL3 }}">
                <div class="button-Container">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn"  style= "color:{{blocks.settings.textColor}};"> L {{section.settings.buttonName3}}</button>
                </div>
            </a>
        {%- endif -%}
        {%- if blocks.settings.colNumber> 3 -%}
            <a href="{{ section.settings.buttonURL4 }}">
                <div class="button-Container">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn"  style= "color:{{blocks.settings.textColor}};"> XL {{section.settings.buttonName4}}</button>
                </div>
            </a>
        {%- endif%}
        {%- if blocks.settings.colNumber> 4 -%}
            <a href="{{ section.settings.buttonURL5 }}">
                <div class="button-Container" style= "color:{{blocks.settings.textColor}};">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn" style= "color:{{blocks.settings.textColor}};">XXL {{section.settings.buttonName5}}</button>
                </div>
            </a>
        {% endif %}
        {%- if blocks.settings.colNumber> 5 -%}
            <a href="{{ section.settings.buttonURL5 }}">
                <div class="button-Container" style= "color:{{blocks.settings.textColor}};">
                    <img src="{{ blocks.settings.image| image_url: width: 833 }}">
                    <button class="btn"  style= "color:{{blocks.settings.textColor}};">SIZE {{section.settings.buttonName5}}</button>
                </div>
            </a>
        {% endif %}
        </div>
    {% endfor %}
    </div>  
</div>

{% schema %}
{
    "name": "Featured Sizes",
    "tag": "section",
    "class": "section",
    "max_blocks": 3,
    "settings": [
        {   
            "type":"text",
            "id":"titleText",
            "label": "Insert Title",
        },
        {
            "type": "text",
            "id": "bottomButtonText",
            "label": "Bottom Button Text",
          },
        {
            "type":"url",
            "id":"bottomButtonURL",
            "label":"Bottom Button URL",
        },
        {
            "type":"range",
            "id":"desktopFontSize",
            "min":2,
            "max":10,
            "step":0.5,
            "unit": "rem",
            "label":"Desktop Display Font Size",
            "default":4,
            },
            {
            "type":"range",
            "id":"mobileFontSize",
            "min":1,
            "max":8,
            "step":0.5,
            "unit": "rem",
            "label":"Mobile Display Font Size",
            "default":3,
            },
    
    ],
    "blocks": [
        {
        "type":"text",
        "name":"Size Buttons",
        "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label": "Insert Image",
        },
        {
        "type":"text",
        "id":"textColor",
        "label": "Button Text Color",
        "default": "black",
        "info": "Color Name or Color Hex Value (e.g. #000000)"
        },
        {
        "type":"range",
        "id":"colNumber",
        "min":2,
        "max":6,
        "step":1,
        "label":"Number of Columns",
        "default":6,
    },

    ]
}
],
    "presets": [
        {
        "name": "Featured Sizes" 
        }
    ]
}
{%- endschema -%}