{% style %}
.sectionHeading{
    align-self:start;
    font-size:4rem;
    font-weight: 200;
    line-height: 1.15;
    color: #545454;
    padding-left:1.5%;
    padding-bottom:10px;
    padding-top:20px;
}
.main-grid{
    color:#545454;
    display: grid;
    grid-template-columns: auto auto auto auto auto auto auto ;
    grid-template-rows: auto auto;
    background-color:white ;
    gap: 5px;
    margin:8px;
}
.gridHeading{
    display:grid;
    grid-column-start:1;
    grid-column-end:8;
    border-bottom-style:solid;
}
.headingButton{
    width:100%;
    text-align:left;
    background-color:white;
    border-style:none;
    font-size: 3rem;
    transition: all 0.5s;
}
.headingButton:after {
    content: 'Â»';
    position: absolute;
    opacity: 0;
    right:2px;  
    transition: 0.8s;
    color:white;
}
.headingButton:hover{
    padding-right: 6rem;
    padding-left:2rem;
    background-color:black;
    color:white;
    text-decoration:underline;
}
.headingButton:hover:after {
    opacity: 1;
    right: 15%;
    color:white;
}
.gridStyling{
    margin: auto;
    width: 93%;
    height:100%;
    padding:10px;
    background-color: white;
    color:#545454;
}
.gridStyling> a{
    display: grid;
    text-decoration:none;
}
.gridStyling> a > button{
    font-size: 2.5rem;
    font-family: monospace;
    transition: all 0.5s;
    border-style:solid;
    border-width:thin;
    border-color:#545454;
    color:#545454;
    background-color:white;
}
.gridStyling> a > button:hover{
color: #fff;
background-color: #545454 !important;
transition: all 0.5s;
box-shadow: rgba(0, 0, 0, 0.25) 0 8px 15px;
transform: translateY(-2px);
}

@media screen and (max-width: 660px) {
    .main-grid{
    grid-template-columns: auto auto auto;
    grid-template-rows: auto auto auto auto auto;
}
    .sectionHeading {
    text-align:center;
}
.gridStyling> a > button{
    font-size: 1.3rem;
    font-family: monospace;
    transition: all 0.5s;
    border-style:solid;
    border-width:thin;
    border-color:#545454;
    color:#545454;
    background-color:white;
}
.headingButton{
    font-size: 2.5rem;

}
}
{% endstyle %}
{%if section.settings.headingName != blank%}
<div class="sectionHeading">{{ section.settings.headingName }}</div>
{%endif%}
