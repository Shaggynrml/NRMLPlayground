{%- style -%}    
    .double-image-container-alt{
        width: 100%;
        display:flex;
        flex-direction:row;
        justify-content: center;
        align-items: center;
        
    }

    .mobile-tiles-alt{
        display:none;
        width:100%;
        padding:0.25rem;
        
    }

    .mobile-tile-container-alt{
        display:flex;
        flex-direction: column;
        width:95%;
        padding:1rem;
    }
    .image-container-mobile-alt{
        width:100%;
        align-items:center;
        justify-content:center;
        display:flex;
        flex-direction:column;
        
    }
    .image-mobile-alt{
        width:100%;
        border-radius: 8px 8px 0px 0px;
    }
    .image-desktop-alt{
        width:100%;
        border-radius: 8px 8px 0px 0px;
    }
    .image-title-mobile-alt{
        font-size:3rem;
        font-weight: 200;
        line-height: 1.15;
        color: #000;
        padding-left:1.5vw;;
        margin-bottom:35px;
        height:0.15vw;
        
    }
    .image-title-desktop-alt{
        font-size:4rem;
        font-weight: 200;
        line-height: 1.15;
        color: #545454;
        padding-bottom:10px;
        padding-top:10px;
        padding-left:10px;
    }
    .image-title-desktop-alt a{
        color: #545454;
        display: inline-block;
        position: relative;
        text-decoration: none;
    }
    .image-title-desktop-alt a::after {
        content: '';
        position: absolute;
        width: 100%;
        transform: scaleX(0);
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: #545454;
        transform-origin: bottom right;
        transition: transform 0.25s ease-out;
    }
    .image-title-desktop-alt a:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }


    .desktop-tiles-alt{
        display:flex;
        justify-content:center;
        align-items:center;
        width:100%;
    }

    .desktop-tile-container-alt{
        display:flex;
        flex-direction:column;
        width:48%;
        border-color: rgb(190, 190, 190);
        border-style: none;
        border-width: 1px;
        margin:0.5vw;
        justify-content:center;
        align-items:center;

    }
    .image-container-desktop-alt{
        width:98%;
    }
        .image-container-desktop-alt img{
        height:85%;
    }
    .text-row{
        display: grid;
        grid-template-columns: 67% 33%;
        border: black;
        border-style: solid;
        border-width: 2px;
        border-top: none;
    }
    .text-row h1{
        font-family:system-ui;
        font-weight:100;
        padding-left:1rem;
        padding-top:0.5rem;
    }
    .tr-link{
        color: black !important;
    }
    .tr-link:link{
        color: black !important;
    }
    .tr-link:visited{
        color:black !important;
        text-decoration: underline;
    }
    .tr-link:hover{
        text-decoration:none;
    }
.btn-5 {
    text-align: center;
    padding: 1rem 0rem;
    display: inline-block;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    font-size: 1.3rem;
    border-left: 4px double;
    letter-spacing: 2px;
}

.btn-5:before {
  content: "";
  position: absolute;
  height: 100%;
  width: 0;
  background : #000000ff;
  left: 0;
  bottom: 0;
  transition: all .3s;
  opacity: 0.3;
}

.btn-5:hover:before {
  width: 100%;
}

    @media screen and (max-width:780px){
        .mobile-tiles-alt{
            display:flex;
            flex-direction:column;
            justify-content:center;
            align-items:center;
            width:100%;
        }
        .desktop-tiles-alt{
            display:none;
        
        }

}
    {%- endstyle -%}

<div class= "double-image-container-alt">
    <div class="desktop-tiles-alt">
         <div class="desktop-tile-container-alt">
            <div class="image-container-desktop-alt" >
            <a href = "{{section.settings.button_link_one}}">
                <img src = "{{section.settings.image-one| img_url: 'master'}}" class = "image-desktop-alt" alt="">
            </a>
            {% if section.settings.button1-text != blank%}
                <a href = "{{section.settings.button_link_one}}" class="tr-link">
                <div class= "text-row">
                    <div><h1>{{section.settings.image-1-title}}</h1></div>
                      <div class="btn-5">{{section.settings.button1-text}}</div>
                </div>
            </a>
            {% endif %}
            </div>
        </div>

         <div class="desktop-tile-container-alt">
            <div class="image-container-desktop-alt" >
            <a href = "{{section.settings.button_link_two}}">
                <img src = "{{section.settings.image-two| img_url: 'master'}}" class = "image-desktop-alt" alt="">
            </a>
            {% if section.settings.button2-text != blank%}
                <div class= "text-row">
                    <div><h1>{{section.settings.image-2-title}}</h1></div>
                      <div class="btn-5">{{section.settings.button2-text}}</div>
                </div>
            {% endif %}
            </div>
        </div>
    </div>
    <div class=mobile-tiles-alt>
        <div class="mobile-tile-container-alt">
            <div>
            <a  class = "image-container-mobile-alt" href = "{{section.settings.button_link_one}}">
                {% if section.settings.image-one-mobile != blank%}
                <img src = "{{section.settings.image-one-mobile| img_url: 'master'}}" class = "image-mobile-alt" alt=""/>
                {% else %}
                <img src = "{{section.settings.image-one| img_url: 'master'}}" class = "image-mobile-alt" alt=""/>
                {% endif %}
            </a>
        </div>
        <a href = "{{section.settings.button_link_one}}" class="tr-link">
            <div class= "text-row">
                    <div><h1>{{section.settings.image-1-title}}</h1></div>
                      <div class="btn-5">{{section.settings.button1-text}}</div>
            </div>
            </a>
        </div>
        <div class="mobile-tile-container-alt">
            <div>
            <a  class = "image-container-mobile-alt" href = "{{section.settings.button_link_two}}">
                {% if section.settings.image-two-mobile != blank%}
                <img src = "{{section.settings.image-two-mobile| img_url: 'master'}}" class = "image-mobile-alt" alt=""/>
                {% else %}
                    <img src = "{{section.settings.image-two| img_url: 'master'}}" class = "image-mobile-alt" alt=""/>
                {% endif %}
            </a>
        </div>
        <a href = "{{section.settings.button_link_two}}" class="tr-link">
            <div class= "text-row">
                    <div><h1>{{section.settings.image-2-title}}</h1></div>
                      <div class="btn-5">{{section.settings.button2-text}}</div>
            </div>
        </a>
        </div>
    </div>
</div>

