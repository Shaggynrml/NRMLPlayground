<style>
.collection-card-container{
  display:flex;
  flex-direction:column;
  border-color: rgb(190, 190, 190);
  border-radius: 8px;
  border-style: solid;
  border-width: 1px;
  
  
}
.collection-card-image-container{
  width:100%;
}

.collection-card-image-container a img{
  width:100%;
  border-radius: 8px 8px 0px 0px;
}
.collection-card-title{
  font-size:4rem;
  font-weight: 200;
  line-height: 1.15;
  color: #545454;
  padding-bottom:10px;
  padding-top:10px;
  padding-left:10px;
}

.collection-card-title a{
  color: #545454;
  display: inline-block;
  position: relative;
}
.collection-card-title a{
  text-decoration:none;
}
.collection-card-title a::after {
  content: '';
  position: absolute;
  width: 100%;
  transform: scaleX(0);
  height: 2px;
  bottom: 0;
  left: 0;
  background-color: #545454;
  transform-origin: bottom right;
  transition: transform 0.25s ease-out;
}
.collection-card-title a:hover::after {
  transform: scaleX(1);
  transform-origin: bottom left;
}

</style>

<div class = "collection-card-container">
  <div class = "collection-card-image-container">
    <a href= "{{card_collection.url}}"><img src="{{ card_collection.image |  image_url: width: 2000}}"/></a>
  </div>
  <div class = "collection-card-title">
    <a href= "{{card_collection.url}}">{{card_collection.title}}</a>
  </div>
</div>